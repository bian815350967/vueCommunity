.content-detials
  font-size: 14px
  line-height: 1.5
  word-wrap : break-word ;
  h1,h2,h3,h4,h5,h6
    font-weight: 700
    font-size: 14px
    margin-bottom: 10px
    line-height: 2
  h2,h3
    margin: 30px 0 15px;
    border-bottom: 1px solid #eee;
  p
    font-size: 15px;
    line-height: 1.7em;
    overflow: auto;
    margin: 10px 0
  .hljs
    display: block;
    overflow-x: auto;
    padding: 0;
    color: #666;
    background: #f8f8f8;
    font-size: 10px
  .hljs-string
    color: #d14
  img
    height: auto;
    max-width: 100%;
    vertical-align: middle;
    border: 0;
    margin-bottom: 10px
  b, strong
    font-weight: bolder;
  ul
    list-style-type: disc;
    margin: 0 0 1rem 2rem;
  li
    list-style-type: disc;
    line-height: 2.5rem
  a
    color: #ff4081;
    padding: 0;
    margin: 0;
    word-wrap : break-word ;
    vertical-align: baseline;
    background: transparent;
  .hljs-keyword,.hljs-params
    font-weight: bold
pre
  width: 100%
  white-space: pre-wrap;
  word-break: break-all;
pre.prettyprint
  font-size: 14px;
  border-radius: 0;
  padding: 8px;
  margin: 20px 0;
  border-width: 1px 0;
  background: #f7f7f7;
  box-sizing border-box
